<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="auth_prefs.xml"/>
        <exclude domain="database" path="gitride_database"/>
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="temp/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer of user data -->
        <include domain="sharedpref" path="user_prefs.xml"/>
        <include domain="database" path="gitride_database"/>
    </device-transfer>
</data-extraction-rules>
